{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container-fluid login" style="background-image: url('{{ asset('build/images/front/Capture.PNG') }}');">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="col-12">
                            {% for flashError in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                            {% endfor %}
                        </div>

                        {{ form_start(registrationForm, {'attr': {'class': 'box'}}) }}

                        <div class="d-flex justify-content-end">
                            <a href="{{ path('home') }}" type="button"
                               class="btn btn-light col-1 border-dark text-center" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </a>
                        </div>

                        <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.username) }}
                        {{ form_row(registrationForm.plainPassword) }}
                        {{ form_row(registrationForm.agreeTerms) }}

                        <button type="submit" class="btn">Register</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
