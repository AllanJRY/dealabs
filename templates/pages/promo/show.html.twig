{% extends 'base.html.twig' %}

{% block title %}Promo{% endblock %}

{% block body %}
    <div class="container">
        <h1>Promo</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ promo.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ promo.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ promo.description }}</td>
                </tr>
                <tr>
                    <th>Link</th>
                    <td>{{ promo.link }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ promo.slug }}</td>
                </tr>
                <tr>
                    <th>PromoCode</th>
                    <td>{{ promo.promoCode }}</td>
                </tr>
                <tr>
                    <th>Expired</th>
                    <td>{{ promo.expired ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ promo.createdAt ? promo.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ promo.updatedAt ? promo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('promo_index') }}">back to list</a>

        <a href="{{ path('promo_edit', {'id': promo.id}) }}">edit</a>

        {{ include('pages/promo/_delete_form.html.twig') }}

        <hr>

        {% for comment in promo.comments | sort((commentA, commentB) => commentA.createdAt < commentB.createdAt) %}
            <p>{{ comment.author.username }} - {{ comment.createdAt | date('d/m/Y H:i', "Europe/Paris") }}</p>
            <p>{{ comment.content }}</p>
        {% endfor %}

        <hr>

        {% if app.user %}
            {# TODO: attention le formulaire doit être visible si non connecté, mais le click sur textarea ouvre le modal de login (voir site dealabs) #}
            {{ form_start(commentForm) }}
            {{ form_widget(commentForm.content) }}
            <input type="submit" value="Envoyer">
            {{ form_end(commentForm) }}
        {% endif %}
    </div>
{% endblock %}
