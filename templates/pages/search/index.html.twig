{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
    <h1>Votre recherche pour : {{ query }}</h1>

    <h2>Deals trouvés :</h2>
    {% for deal in deals_found %}
        <p>{{ deal.title }}</p>
    {% endfor %}
    <a href="{{ path('search_deals', {'s': query}) }}">See more results...</a>
    {# TODO: add 'show more' links ? #}
    <hr>
    <h2>Categories correspondantes :</h2>
    {% for category in categs_found %}
        <p>{{ category.title }}</p>
    {% endfor %}
    {# TODO: add 'show more' links ? #}
    <hr>
    <h2>Partenaires trouvés :</h2>
    {% for partner in partners_found %}
        <p>{{ partner.name }}</p>
    {% endfor %}
    {# TODO: add 'show more' links ? #}
    <hr>
{% endblock %}
