<header class="bg-secondary">
    <div class="container">
        <div class="row align-items-center">
            <a class="navbar-brand col-md-2 col-3 m-0 text-white" href="{{ path('home') }}">
                <img class="img-fluid"
                     src="https://upload.wikimedia.org/wikipedia/fr/thumb/5/57/Dealabs_Logo.svg/1024px-Dealabs_Logo.svg.png"
                     alt="Dealabs">
            </a>
            <div class="col-6 col-md-5">
                <nav class="navbar navbar-expand-lg bg-secondary">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarTogglerDemo01"
                                aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item {% if app.request.attributes.get('_route') == 'good_plan_index' %} active{% endif %}">
                                    <a class="nav-link" href="{{ path('good_plan_index') }}">Bons plans</a>
                                </li>
                                <li class="nav-item {% if app.request.attributes.get('_route') == 'promo_index' %} active{% endif %}">
                                    <a class="nav-link" href="{{ path('promo_index') }}">Codes promo</a>
                                </li>
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton"
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                            Menu
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton">
                                            <li><a class="dropdown-item active" href="#">Tous les groupes <i class="fas fa-angle-right"></i></a></li>
                                            <div class="row">
                                                {% for category in get_all_category()|slice(0, 15) %}
                                                    <li class="col-6"><a class="dropdown-item" href="#">{{ category.title }}</a></li>
                                                {% endfor %}
                                            </div>
                                            <li>
                                                <hr class="dropdown-divider">
                                            </li>
                                            <li><a class="dropdown-item active" href="#">Tous les marchands <i class="fas fa-angle-right"></i></a></li>
                                            <div class="row">
                                                {% for partner in get_all_partner()|slice(0,8) %}
                                                    <li class="col-6"><a class="dropdown-item" href="#">{{ partner.name }}</a></li>
                                                {% endfor %}
                                            </div>
                                        </ul>
                                    </div>
                                </li>
                            </ul>
                            <form class="d-md-none d-flex">
                                <input class="form-control me-2 " type="search" placeholder="Rechercher..."
                                       aria-label="Rechercher...">
                                <button class="btn btn-success" type="submit"><i class="fas fa-search"></i></button>
                            </form>
                        </div>
                    </div>
                </nav>
            </div>
            <form class="col-md-3 d-none d-md-flex">
                <input class="form-control me-2 " type="search" placeholder="Rechercher..." aria-label="Rechercher...">
                <button class="btn btn-success" type="submit"><i class="fas fa-search"></i></button>
            </form>
            <div class="col-2 col-md-1 d-flex flex-nowrap align-items-center">
                {% if not app.user %}
                    <a class="btn btn-dark m-2" href="{{ path('app_login') }}">
                        <i class="fas fa-user"></i>
                        <span class="d-none d-lg-flex">Connexion</span>
                    </a>
                {% else %}
                    {# <button type="button" class="btn btn-primary m-2"> #}
                    {# <i class="fas fa-plus"></i> #}
                    {# <span class="d-none d-lg-flex">Poster</span> #}
                    {# </button> #}

                    <div class="dropdown">
                        <button class="btn btn-circle btn-lg" type="button" id="dropdownMenuButton1"
                                data-bs-toggle="dropdown" aria-expanded="false" style="background: url('http://via.placeholder.com/300x180'); background-size: cover; background-repeat: no-repeat; ">
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li class="p-3 bg-primary"><span class="text-white text-center">{{ app.user.username }}</span></li>
                            <li class="border p-2"><a class="dropdown-item" href="{{ path('overview') }}">Aperçu de l'activité</a></li>
                            <li class="border p-2"><a class="dropdown-item" href="{{ path('badges') }}">Mes badges</a></li>
                            <li class="border p-2"><a class="dropdown-item" href="{{ path('good_plan') }}">Deals postés</a></li>
                            <li class="border p-2"><a class="dropdown-item" href="{{ path('discussions') }}">Discussions postées</a></li>
                            <li class="border p-2"><a class="dropdown-item" href="{{ path('saved_deals') }}">Deals sauvegardés</a></li>
                            <li class="border p-2"><a class="dropdown-item" href="{{ path('keyword_alarms') }}">Mes alertes</a></li>
                            <li class="border p-2"><a class="dropdown-item" href="{{ path('settings') }}">Paramétres</a></li>
                            <li class="border p-2 border-primary">
                                <a class="btn m-2 text-primary" href="{{ path('app_logout') }}">
                                    <i class="fas fa-sign-out-alt"></i>
                                    Déconnexion
                                </a>
                            </li>
                        </ul>
                    </div>

                    {# TODO change ids and classes #}
                    <div class="dropdown">
                        <button class="btn btn-primary m-2" type="button" id="dropdownMenuButton1"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-plus"></i>
                            <span class="d-none d-lg-flex">Poster</span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="{{ path('good_plan_new') }}">Nouveau bon plan</a></li>
                            <li><a class="dropdown-item" href="{{ path('promo_new') }}">Nouveau code promo</a></li>
                        </ul>
                    </div>




                {% endif %}
                {# <button type="button" class="btn btn-dark m-2" data-bs-toggle="modal" #}
                {# data-bs-target="#authLoginModal"> #}
                {# <i class="fas fa-user"></i> #}
                {# <span class="d-none d-lg-flex">Connexion</span> #}
                {# </button> #}
            </div>
        </div>
    </div>
</header>


