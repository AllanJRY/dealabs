{% verbatim %}
<div class="card mt-3 mb-3">
    <div class="card-horizontal">
        <div class="col-4 m-3">
            <a class="text-decoration-none text-dark">
                <img src="https://via.placeholder.com/300x180" alt="">
            </a>
        </div>
        <div class="card-body col-8">
            <div class="row justify-content-between ">
                <div class="col-8">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn text-primary">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn text-danger fw-bold">
                            0Â°
                        </button>
                        <button type="button" class="btn text-danger">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
            </div>
            <a class="text-decoration-none text-dark">
                <h4 class="card-title fw-bold">{{ title }}</h4>
            </a>
            <p>
                <span class="text-danger">
                </span>
                <span class="text-muted">| Codes promo </span>
                <a class="text-primary text-decoration-none" href="#"><!--{{ deal.partner.name }}--></a>
            </p>
            <div class="row">
                <a class="btn btn-primary col-6" type="button" target="_blank" :href="link">
                    <span>Profiter du code</span>
                    <i class="fas fa-external-link-square-alt"></i>
                </a>
                <a class="btn btn-outline-secondary col-4" type="button">
                    <span>{{ promoCode }}</span>
                </a>
                <button class="btn btn-primary col-2">
                    <i class="fas fa-external-link-square-alt"></i>
                </button>
            </div>
            <p class="card-text">
<!--                TODO-->
<!--{#                {{ deal.description|length > 100 ? deal.description|slice(0, 100) ~ '...' : deal.description }}#}-->
                {{ description }}
                <a class="text-decoration-none text-dark fw-bold">Afficher plus</a>
            </p>
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-9 col-3">
                    <p><!--{{ deal.author.username }}--></p>
                </div>
                <div class="col-lg-3 col-9">
                    <a class="btn text-dark text-decoration-none border-dark border-1 m-3" type="button">
                        <i class="fas fa-comment"></i>
                        <span><!--{{ deal.comments|length }}--></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endverbatim %}
